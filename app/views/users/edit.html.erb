<% if session[:user_id].presence && session[:child_id].presence %>
  <%= render "layouts/header" %>
<% end %>

<div class="container">  <%# ページ全体を囲むコンテナ%>
<br>
<h2 class="text-center">ユーザーの設定変更</h2>
<br>

<div class="col-md-offset-4 col-md-4 well"> <%# グリッドシステム%>

  <%= form_for(@user) do |form| %>
  <%= render 'shared/error_messages', object: form.object %>
    <div class="form-group">
      <%= form.label :名前 %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :アドレス %>
      <%= form.email_field :email, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :パスワード %>
      <%= form.password_field :password, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :確認用パスワードの再入力 %>
      <%= form.password_field :password_confirmation, class: 'form-control' %>
    </div>
    <br>

    <%= button_tag :type => "submit", :class =>"button" do %>
      <%= fa_icon("user") %> 設定を変更する
    <% end %>

  <% end %>
  <br><br>

  <%= link_to edit_path do %>
    <%= fa_icon("backward") %> 前のページに戻る
  <% end %>

</div> <%# グリッドシステム%>
</div>  <%# ページ全体を囲むコンテナ%>
