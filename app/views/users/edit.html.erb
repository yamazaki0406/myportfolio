<% if session[:user_id].presence && session[:child_id].presence %>
  <%= render "layouts/header" %>
<% end %>

<div class="container">  <%# ページ全体を囲むコンテナ%>
<div class="col-md-offset-3 col-md-6"> <%# グリッドシステム%>

  <h2 class="text-center">ユーザー設定変更</h2>

  <%= form_for(@user) do |form| %>
  <%= render 'shared/error_messages', object: form.object %>
    <div class="form-group">
      <%= form.label :名前 %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :アドレス %>
      <%= form.email_field :email, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :パスワード %>
      <%= form.password_field :password, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :確認用パスワードの再入力 %>
      <%= form.password_field :password_confirmation, class: 'form-control' %>
    </div>

    <%= form.submit "設定を変更する", class: "btn btn-primary btn-lg" %>
  <% end %>
  <br>
  <%= link_to '＜＜前のページに戻る', edit_path %>

</div> <%# グリッドシステム%>
</div>  <%# ページ全体を囲むコンテナ%>
