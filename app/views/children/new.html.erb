<div class="container">
  <div class="row">
  <h2 id="page_title">新しい子を登録する</h2>
    <div class="col-md-9">
      <%= form_for(@child, url:children_path) do |form| %>
      <%= render "shared/error_messages_for_new_child" %>

      <div class="form-group">
        <%= form.label :名前 %>
        <%= form.text_field :name, class:"form-control" %>
      </div>

      <div class="form-group">
      <%= form.file_field :images, multiple: true %>
      </div>

      <div class="form-group">
        <%= form.label :性別 %>
        <label><%= form.radio_button :sex, "男の子" %> 男の子 </label>
        <label><%= form.radio_button :sex, "女の子" %> 女の子</label>
        <label><%= form.radio_button :sex, "その他" %> その他</label>
      </div>

      <div class="form-group">
        <%= form.label :誕生日 %>
        <%= form.date_select :birthday, start_year: Time.now.year - 20, end_date: Date.today, class:"form-control" %>
      </div>

      <%= form.text_field :user_id, value:session[:user_id] %>
      <%= form.text_field :child_password, value:@child_password %>

      <div class="form-group">
        <%= form.submit "子どもを登録する", class:"btn btn-primary" %>
      </div>

      <% end %>
    </div>
  </div>
</div>
