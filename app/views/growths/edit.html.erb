<div class="container">  <%# ページ全体を囲むコンテナ%>
<div class="col-md-offset-3 col-md-6"> <%# グリッドシステム%>

  <h2 class="text-center""><%= @child.name %>の編集</h2>
  <%= form_for(@growth) do |form| %>
   <%= render "shared/error_messages_for_new_growth" %>
　  <div class="form-group">
      <%= form.label :date %>
      <%= form.date_select :date, class:"form-control" %>
　  </div>

    <div class="form-group">
      <%= form.label :height %>
      <%= form.number_field :height, :step=>"0.01", class:"form-control" %>
　  </div>

    <div class="form-group">
      <%= form.label :weight %>
      <%= form.number_field :weight, :step=>"0.1", class:"form-control" %>
　  </div>

    <div class="form-group">
      <%= form.submit "Create my account", class:"btn btn-primary" %>
　　</div>

  <% end %>
   <%= link_to '身長・体重一覧に戻る', growths_path %>
   <%= link_to '子どものページに戻る', child_path(@child) %>

</div> <%# グリッドシステム%>
</div>  <%# ページ全体を囲むコンテナ%>
