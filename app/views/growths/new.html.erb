<div class="container">  <%# ページ全体を囲むコンテナ%>
<br>
<h2 class="text-center">身長・体重の入力</h2>
<br>
<div class="col-md-offset-3 col-md-6 well"> <%# グリッドシステム%>
  <%= form_for(@growth, url:growths_path) do |form| %>
  <%= render "shared/error_messages", object: form.object %>
    <div class="form-group">
      <%= form.label :測定日 %>
              <div class='input-group date datepicker'>
      <%= form.date_field :date, class:"form-control", value:Date.today %>
    </div>
  </div>

    <div class="form-group">
      <%= form.label :身長 %>
      <%= form.number_field :height, :step=>"0.1", class:"form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :体重 %>
      <%= form.number_field :weight, :step=>"0.1", class:"form-control" %>
    </div>

      <%= form.hidden_field :user_id, value:session[:user_id] %>

    <div class="form-group">
      <%= form.submit "データを入力", class:"button" %>
    </div>
  <% end %>
<br>

  <%= link_to growths_path do %>
    <%= fa_icon("backward") %> 前のページに戻る
  <% end %>

</div> <%# グリッドシステム%>
</div>  <%# ページ全体を囲むコンテナ%>
