  <div class="top_nav_bar col-md-offset-3 col-md-6">
     <%= link_to "アカウントの新規作成", signup_path, class:"buttons text-center", id:"top_nav_list" %>
     <%= link_to "ログイン", login_path, class:"buttons text-center", id:"top_nav_list" %>
     <%= form_for(:session, url: login_path, html:{id:"top_nav_list"}) do |f| %>
       <%= f.hidden_field :email, id:"input_field", value: "sample@example.jp"%>
       <%= f.hidden_field :password, id:"input_field", value: "aaaaaa"%>
       <%= f.submit "簡単ログイン", class:"buttons", id:"easy_login"%>
     <% end %>
  </div>

</div>
</div>
