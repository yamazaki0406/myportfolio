<div class="container">  <%# ページ全体を囲むコンテナ%>
<div class="col-md-offset-2 col-md-8"> <%# グリッドシステム%>

<h2 class="text-center">記事の編集</h2>
  <%= form_for(@micropost) do |form| %>
  <%= render "shared/error_messages", object: form.object %>

  <div class="form-group", id:"input_field">
    <%= form.label :今日の出来事 %><br>
    <%= form.text_area :content, class:"form-control", size:"20x10" %>
  </div>

  <div class="form-group", id:"input_field">
    <%= form.label :写真 %><br>
    <% if @micropost.images.attached? %>
      <% @micropost.images.each do |image| %>
        <%= image_tag image.variant(resize:'200x200') %>
        <%= link_to '削除する', purge_micropost_path(@micropost), method: :delete, data: { confirm: '本当に削除しますか?' } %>
        <% end %>
      <% else %>
          <%= form.file_field :images, multiple: true %>
      <% end %>
    </div>

    <%= form.submit "記事を編集", class:"btn btn-primary" %>
  <% end %><br>

  <%= link_to '＜＜アルバム一覧に戻る', microposts_path %><br>
  <%= link_to '＜＜子どものページに戻る', child_path(@child) %>
</div>

</div> <%# グリッドシステム%>
</div>  <%# ページ全体を囲むコンテナ%>
