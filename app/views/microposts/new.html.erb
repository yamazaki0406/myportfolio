<div class="container">  <%# ページ全体を囲むコンテナ%>
<div class="col-md-offset-2 col-md-8"> <%# グリッドシステム%>

  <h2 class="text-center">アルバムを作成する</h2>
  <%= form_for(@micropost) do |form| %>
  <%= render "shared/error_messages", object: form.object %>

    <div class="form-group", id:"input_field">
      <%= form.label :今日の出来事 %><br>
      <%= form.text_area :content, class:"form-control", size:"20x10", id: "input-text" %>
      <p id="counter">残り300文字</p>
    </div>

    <div class="form-group", id:"input_field">
      <%= form.label :写真 %><br>
      <%= form.file_field :images, multiple: true %>
    </div>

    <%= form.hidden_field :user_id, value:session[:user_id] %>

    <div class="form-group", id:"input_field">
      <%= form.submit "アルバムを追加", class:"btn btn-primary" %>
    </div>

  <% end %>
  <%= link_to '＜＜アルバム一覧に戻る', microposts_path %><br>

</div> <%# グリッドシステム%>
</div>  <%# ページ全体を囲むコンテナ%>
